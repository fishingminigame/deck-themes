{
    "name": "Mini Carousel",
    "author": "seagrot",
    "version": "v1.1",
    "manifest_version": 8,
    "target": "Home",
    "description": "Shrinks the carousel.",
    "inject": { "shared.css": ["bigpicture"] },
    "patches" : {
            "Size": { 
                "default": "0.7",
                "type": "slider",
                "values": { "0.5": { "five.css": ["bigpicture"], "--mc-scale-value": ["0.5", "bigpicture"] },
                            "0.6": { "six.css": ["bigpicture"], "--mc-scale-value": ["0.6", "bigpicture"] },
                            "0.7": { "seven.css": ["bigpicture"], "--mc-scale-value": ["0.7", "bigpicture"] },
                            "0.8": { "eight.css": ["bigpicture"], "--mc-scale-value": ["0.8", "bigpicture"] },
                            "0.9": { "nine.css": ["bigpicture"], "--mc-scale-value": ["0.9", "bigpicture"] }
                          }
	            }
                }
}
